	<div class="isi">
		<center>
			<h3>Tambah Transaksi Peminjaman</h3>
			<form action="/transactions/add" method="POST">
				<table>
					<tr>
						<td>Members Name</td> <!-- butuh data members -->
						<td>:</td>

						<td>
							<select name="MemberId" id="MemberId">
								<% dataMembers.forEach(el => { %>  
									<option value="<%= el.id %>"><%= el.name %></option>
								<% }) %>
							</select>
						</td>
					</tr>
					
					<tr>
						<td>Buku</td> <!-- butuh data books -->
						<td>:</td>
						<td>
							<select name="BookId" id="BookId">
								<% dataBooks.forEach(el => { %>  
									<option value="<%= el.id %>"><%= el.name %></option>
								<% }) %>
							</select>
						</td>
					</tr>
					
					<tr>
						<td>Tanggal Pinjam</td>
						<td>:</td>
						<td><input type="date" name="borrowed_date"></td>
					</tr>
					
					<!-- <tr>
						<td>Tanggal Kembali</td>
						<td>:</td>
						<td><input type="text" name="tgl_kembali"></td>
					</tr> -->
					
					<!-- <tr>
						<td>Status</td>
						<td>:</td>
						<td>
							<select id="status" >
								<option value="Sedang Meminjam">Sedang Meminjam</option>
								<option value="Sudah Mengembalikan">Sudah Mengembalikan</option>
						</td>
					</tr> -->
					
					<tr>
						<td></td><td></td>
						<td><input type="submit" name="tambah" value="TAMBAH"></td>
					</tr>
					
				</table>
			</form>
		</center>
	</div>
	
	<div class="footer">
		<h4>&trade; Hacktiv8 KG-01-Agile Fox </h4>
	</div>
</body>
</html>